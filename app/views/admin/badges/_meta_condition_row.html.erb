<div class="rounded-2xl border border-slate-200 bg-white p-4 space-y-2" data-badge-builder-target="metaRow">
  <div class="grid gap-3 md:grid-cols-3 text-sm">
    <div>
      <label class="block text-xs font-semibold text-slate-500">Condition Type</label>
      <%= select_tag "badge[meta_conditions][#{index}][type]",
                     options_for_select(meta_condition_types, condition["type"]),
                     class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" %>
    </div>
    <div>
      <label class="block text-xs font-semibold text-slate-500">Key / Context</label>
      <%= text_field_tag "badge[meta_conditions][#{index}][key]",
                         condition["key"],
                         class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm",
                         placeholder: "Forest" %>
    </div>
    <div>
      <label class="block text-xs font-semibold text-slate-500">Value</label>
      <%= text_field_tag "badge[meta_conditions][#{index}][value]",
                         condition["value"],
                         class: "mt-1 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm",
                         placeholder: "50" %>
    </div>
  </div>
  <div class="flex justify-end">
    <button type="button"
            class="text-xs font-semibold text-rose-600"
            data-action="badge-builder#removeCondition">
      Delete
    </button>
  </div>
</div>
