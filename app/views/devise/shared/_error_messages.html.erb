<% return if resource.blank? || resource.errors.empty? %>

<div class="mb-6 rounded-xl border border-rose-500/50 bg-rose-900/40 p-4 text-sm text-rose-100 shadow-inner">
  <h2 class="font-semibold text-rose-200">
    <%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
  </h2>
  <ul class="mt-3 list-inside list-disc space-y-1">
    <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
