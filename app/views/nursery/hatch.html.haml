.min-h-screen.flex.flex-col.items-center.justify-center.bg-gray-100.text-center.space-y-6
  - if params[:reveal] == "true"
    - sprite = pet_sprite_path(@pet)
    = image_tag sprite, class: "w-40 h-40"

    %h1.text-xl.font-bold.text-green-700
      You hatched #{@pet.name}!
  = link_to "Close", user_pets_path(collection: "eggs"), class: "text-blue-600 underline mt-4"
  - else
    %meta{content: "3;url=#{nursery_hatch_path(@user_pet, reveal: true)}", "http-equiv" => "refresh"}/
    = image_tag asset_path("eggs/#{@egg.name.parameterize}.png"), class: "w-40 h-40"
    %h1.text-xl.font-semibold.text-gray-700.mt-4 Hatching...
