<section class="space-y-4">
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-semibold text-slate-900"><%= title %></h2>
    <span class="text-xs font-semibold text-slate-400 uppercase tracking-[0.3em]"><%= pluralize(mods.size, "entry") %></span>
  </div>
  <div class="grid gap-4 md:grid-cols-2">
    <% mods.each do |mod| %>
      <article class="rounded-3xl border <%= accent %> p-5 space-y-3 bg-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-slate-900"><%= mod.label %></h3>
            <p class="text-xs uppercase tracking-[0.3em] text-slate-400"><%= mod.key %></p>
          </div>
          <%= admin_related_links([{ label: "Clone", path: admin_content_path, icon: "+" }]) %>
        </div>
        <% if mod.description.present? %>
          <p class="text-sm text-slate-600"><%= mod.description %></p>
        <% end %>
        <% if mod.requirements.any? %>
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase">Requirements</p>
            <ul class="text-sm text-slate-700 list-disc list-inside">
              <% mod.requirements.each do |req| %>
                <li><%= req %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% if mod.rewards.present? %>
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase">Rewards</p>
            <pre class="bg-slate-50 rounded p-3 text-xs text-slate-600"><%= JSON.pretty_generate(mod.rewards) %></pre>
          </div>
        <% end %>
      </article>
    <% end %>
  </div>
</section>
