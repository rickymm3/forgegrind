%header.bg-white.shadow-sm
  .max-w-7xl.mx-auto.px-4.py-3.flex.justify-between.items-center
    %h1.text-xl.font-semibold
      = link_to "ForgeGrind", root_path, class: "text-blue-700 hover:underline"

    .flex.items-center.space-x-6
      / Main Game Navigation (always shown)
      = link_to "Pets", pets_path, class: "text-sm text-blue-600 hover:underline"
      = link_to "Store", store_path(tab: "eggs"), class: "text-sm text-blue-600 hover:underline"
      = link_to "Explore", explorations_path, class: "text-sm text-blue-600 hover:underline"
      = link_to "Inventory", inventory_path, class: "text-sm text-blue-600 hover:underline"
      = link_to "Hero", hero_path, class: "text-sm text-blue-600 hover:underline"
      = link_to "Battle", worlds_path, class: "text-sm text-blue-600 hover:underline"

      - if user_signed_in? && current_user.admin?
        = link_to "Admin", admin_root_path, class: "text-sm text-red-600 font-semibold hover:underline"

    .flex.items-center.space-x-4
      - if user_signed_in?
        = render "shared/currency_badges", currencies: currency_balances_for(current_user)
        = link_to "Profile", user_profile_path, class: "text-sm text-blue-600 hover:underline"
        = link_to "Log Out", destroy_user_session_path,
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "text-sm text-blue-600 hover:underline" 
      - else
        = link_to "Sign Up", new_user_registration_path, class: "text-sm text-blue-600 hover:underline"
        = link_to "Log In", new_user_session_path, class: "text-sm text-blue-600 hover:underline"
