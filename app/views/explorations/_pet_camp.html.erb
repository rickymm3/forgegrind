<% return if user_pets.blank? %>

<section class="pet-camp">
  <div class="pet-camp__header">
    <div>
      <p class="pet-camp__eyebrow">Exploration Party</p>
      <h3 class="pet-camp__title">Camp Check-In</h3>
      <p class="pet-camp__helper">Your active pets are ready to scout this zone.</p>
    </div>
  </div>

  <div class="pet-camp__grid">
    <% user_pets.each do |pet| %>
      <% pet_name = pet.name.presence || pet.pet.name %>
      <% image_path = pet_profile_image_path(pet) %>
      <div class="pet-camp__card">
        <div class="pet-camp__media">
          <%= image_tag image_path, alt: pet_name, class: "pet-camp__avatar" %>
        </div>
        <div class="pet-camp__body">
          <div class="pet-camp__row">
            <span class="pet-camp__name"><%= pet_name %></span>
            <span class="pet-camp__level">Lv <%= pet.level %></span>
          </div>
          <div class="pet-camp__stats">
            <span class="pet-camp__pill">Energy <%= pet.energy.to_i %> / <%= UserPet::MAX_ENERGY %></span>
            <span class="pet-camp__pill pet-camp__pill--status"><%= pet_status_label(pet) %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
