<% descriptors ||= [] %>
<% if descriptors.any? %>
  <div class="mx-auto w-full max-w-4xl px-4 pb-4">
    <div class="flex flex-wrap items-center gap-2">
      <% descriptors.each do |desc| %>
        <span class="inline-flex items-center rounded-full bg-slate-900/70 px-3 py-1 text-xs font-semibold text-slate-100 border border-slate-800">
          <%= desc %>
        </span>
      <% end %>
    </div>
  </div>
<% end %>
