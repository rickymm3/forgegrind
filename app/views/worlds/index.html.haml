.container.mx-auto.mt-8
  %h1.text-3xl.font-bold.mb-6 Battle Gauntlets

  %ul.grid.grid-cols-1.sm:grid-cols-2.lg:grid-cols-3.gap-4
    - @worlds.each do |world|
      - unlocked = @unlocked_ids.include?(world.id)
      %li.border.rounded-lg.p-4{ class: (unlocked ? '' : 'opacity-50') }
        %h2.font-semibold.text-xl= world.name
        - if unlocked
          = link_to "Enter Battle",
                    new_world_battle_session_path(world),
                    class: "mt-3 inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
        - else
          %p.text-sm.text-gray-500 Not yet unlocked
