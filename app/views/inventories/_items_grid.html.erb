<div id="inventory-items-grid">
  <% if items.blank? %>
    <div class="rounded-3xl border border-slate-800 bg-slate-900/60 px-6 py-10 text-center text-sm text-slate-300">
      You'll see pet-care and upgrade items here as you open containers and progress.
    </div>
  <% else %>
    <div class="grid grid-cols-2 gap-3 sm:grid-cols-3 lg:grid-cols-4">
      <% items.each do |user_item| %>
        <% item = user_item.item %>
        <% metadata = inventory_item_metadata(item) %>
        <% rarity = metadata[:rarity] || "common" %>
        <% frame_class = rarity_frame_class(rarity) %>
        <% icon_path = care_item_image_path(item.item_type) %>
        <div class="space-y-2">
          <%= link_to item_panel_inventory_path(item_id: user_item.id),
                      data: { turbo_frame: "inventory-detail-panel", turbo_method: :post },
                      class: "group relative block aspect-square overflow-hidden rounded-3xl border-2 #{frame_class} bg-slate-900/60 shadow-inner shadow-slate-950/40 transition focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950 hover:scale-[1.01]" do %>
            <span class="sr-only"><%= item.name %></span>
            <% if icon_path.present? %>
              <%= image_tag icon_path,
                            alt: "",
                            class: "absolute inset-0 h-full w-full object-contain p-4 transition duration-200 group-hover:scale-105" %>
            <% else %>
              <div class="absolute inset-0 flex items-center justify-center text-sm text-slate-300">No Art</div>
            <% end %>
            <span class="absolute bottom-2 right-2 inline-flex items-center rounded-full bg-emerald-600/90 px-3 py-1 text-[11px] font-semibold text-white shadow-md">
              x<%= user_item.quantity %>
              <span class="sr-only">in stack</span>
            </span>
            <span class="absolute top-2 left-2 inline-flex items-center rounded-full bg-slate-950/80 px-2 py-1 text-[10px] font-semibold uppercase tracking-wide text-<%= rarity_color_class(rarity) %>">
              <%= rarity.titleize %>
            </span>
          <% end %>
          <div class="flex items-center justify-between text-xs text-slate-400">
            <span class="font-semibold text-slate-100 text-sm truncate"><%= item.name %></span>
            <span><%= item.item_type.to_s.humanize %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
