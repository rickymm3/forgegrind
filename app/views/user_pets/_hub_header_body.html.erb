<%
  active_collection ||= :pets
  pet_count          ||= 0
  egg_count          ||= 0
%>
<div class="page-toolbar">
  <% current = active_collection.to_s %>
  <% eggs_active = current == "eggs" %>
  <% pets_active = current == "pets" %>
  <% toggle_base = "icon-toggle border transition" %>
  <% active_classes = "icon-toggle--active bg-indigo-500/20 border-indigo-400/60 text-indigo-100" %>
  <% inactive_classes = "bg-slate-900/60 border-slate-700/60 text-slate-300" %>
  <div class="page-toolbar__segment">
    <%= link_to user_pets_path(collection: :eggs),
                class: [toggle_base, (eggs_active ? active_classes : inactive_classes)].compact.join(" "),
                aria: { pressed: eggs_active, label: "Show eggs" },
                data: { turbo_frame: "_top" } do %>
      <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.4">
        <path d="M12 21c4.4 0 8-3.6 8-8 0-3.4-2.2-8-8-13-5.8 5-8 9.6-8 13 0 4.4 3.6 8 8 8z" />
      </svg>
      <span class="sr-only">Show eggs</span>
    <% end %>

    <div class="page-toolbar__summary">
      <p class="page-toolbar__summary-title">Pets</p>
      <p class="page-toolbar__summary-meta">
        <span id="pet-count"><%= pluralize(pet_count, "pet") %></span>
        Â·
        <span id="egg-count"><%= pluralize(egg_count, "egg") %></span>
      </p>
    </div>

    <%= link_to user_pets_path(collection: :pets),
                class: [toggle_base, (pets_active ? active_classes : inactive_classes)].compact.join(" "),
                aria: { pressed: pets_active, label: "Show pets" },
                data: { turbo_frame: "_top" } do %>
      <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.4">
        <path d="M4.8 10.2c0-2.7 2.3-4.9 5.2-4.9 1.3 0 2.5.5 3.5 1.3.9-.8 2.1-1.3 3.4-1.3 2.9 0 5.2 2.2 5.2 4.9 0 4.9-8.6 9.5-8.6 9.5S4.8 15.1 4.8 10.2z" />
      </svg>
      <span class="sr-only">Show pets</span>
    <% end %>
  </div>
</div>
