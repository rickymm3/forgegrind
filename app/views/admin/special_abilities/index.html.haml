- content_for :title, "Special Abilities"

%section.space-y-6
  .flex.items-center.justify-between
    %h1.text-2xl.font-semibold.text-slate-100 Special Abilities
    = link_to "New Special Ability", new_admin_special_ability_path,
              class: "inline-flex items-center rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500"

  .overflow-hidden.rounded-3xl.border.border-slate-800.bg-slate-900/60
    %table.w-full.text-left.text-sm.text-slate-200
      %thead.bg-slate-900/80
        %tr
          %th.py-3.px-4.font-semibold.text-slate-300 Reference
          %th.py-3.px-4.font-semibold.text-slate-300 Name
          %th.py-3.px-4.font-semibold.text-slate-300 Tagline
          %th.py-3.px-4.font-semibold.text-slate-300 Pets
          %th.py-3.px-4
      %tbody.divide-y.divide-slate-800
        - @special_abilities.each do |ability|
          %tr
            %td.py-3.px-4.font-mono.text-xs.text-slate-400= ability.reference
            %td.py-3.px-4= ability.name
            %td.py-3.px-4.text-slate-400= ability.tagline.presence || "â€”"
            %td.py-3.px-4.text-slate-300= ability.pets.count
            %td.py-3.px-4.text-right
              = link_to "View", admin_special_ability_path(ability), class: "text-indigo-300 hover:text-indigo-200"
