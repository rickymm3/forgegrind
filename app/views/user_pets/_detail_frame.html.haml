- empty_html = render("user_pets/empty_detail")
%turbo-frame#pet_detail{"data-empty-html" => empty_html, "data-selected-pet-id" => "#{user_pet&.id || 0}"}
  .bg-white.border-t.border-slate-200.shadow-xl.lg:shadow-sm.lg:border.lg:rounded-xl.lg:border-slate-200.p-6.relative.rounded-t-2xl.overflow-y-auto{ class: "max-h-[70vh] lg:max-h-[calc(100vh-4rem)] lg:sticky lg:top-6", "data-controller" => "pet-detail" }
    - if user_pet
      %button.absolute.right-4.top-4.text-slate-400.hover:text-slate-600.focus:outline-none.focus:ring-2.focus:ring-indigo-500.rounded-full.p-1.lg:hidden{"aria-label" => "Close pet details", "data-action" => "pet-detail#close", :type => "button"}
        %svg.h-5.w-5{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M6 18L18 6M6 6l12 12", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "1.5"}
      = render "user_pets/detail", user_pet: user_pet
    - else
      = empty_html
