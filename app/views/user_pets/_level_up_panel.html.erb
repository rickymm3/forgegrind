<% context = (defined?(local_assigns) && local_assigns.fetch(:context, nil)) || :page %>
<% return unless context == :page %>
<% maxed      = user_pet.level >= UserPet::LEVEL_CAP %>
<% can_level  = user_pet.exp.to_i >= UserPet::EXP_PER_LEVEL %>
<% sleeping   = user_pet.asleep_until.present? && Time.current < user_pet.asleep_until %>
<% exploring  = user_pet.exploring? %>
<% button_disabled = maxed || exploring || sleeping || !can_level %>
<% status_message = if maxed
                      "#{user_pet.name.presence || user_pet.pet.name} has reached the level cap."
                    elsif exploring
                      "Unavailable while exploring."
                    elsif sleeping
                      "Let your companion finish resting first."
                    elsif !can_level
                      "Earn more experience to level up."
                    end %>

<section class="rounded-3xl border border-slate-800 bg-slate-950/70 p-4 shadow-inner shadow-slate-950/50">
  <header class="mb-3 flex items-center justify-between">
    <div>
      <h3 class="text-sm font-semibold text-slate-100 uppercase tracking-wide">Level Progress</h3>
      <p class="text-xs text-slate-400">Spend stored experience to advance immediately.</p>
    </div>
    <span class="inline-flex items-center gap-1 rounded-full bg-slate-900/80 px-2 py-1 text-[11px] font-semibold text-indigo-200">
      EXP: <%= user_pet.exp %> / <%= UserPet::EXP_PER_LEVEL %>
    </span>
  </header>

  <div class="space-y-3 text-sm text-slate-300">
    <div class="flex flex-wrap items-center gap-3">
      <span class="inline-flex items-center gap-2 rounded-full border border-slate-700/60 bg-slate-900/70 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-slate-200">
        Current Level
        <span class="rounded-full bg-indigo-500/20 px-2 py-0.5 text-indigo-200"> <%= user_pet.level %> </span>
      </span>
      <% if maxed %>
        <span class="inline-flex items-center gap-2 rounded-full border border-emerald-500/40 bg-emerald-500/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-emerald-200">
          Max level reached
        </span>
      <% elsif can_level %>
        <span class="inline-flex items-center gap-2 rounded-full border border-amber-500/40 bg-amber-500/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-amber-200">
          Ready to level up
        </span>
      <% else %>
        <span class="inline-flex items-center gap-2 rounded-full border border-slate-700/60 bg-slate-900/70 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-slate-300">
          <%= pluralize(UserPet::EXP_PER_LEVEL - user_pet.exp.to_i, "XP") %> to go
        </span>
      <% end %>
    </div>

    <% leveling_items = current_user.user_items
                                   .includes(:item)
                                   .select { |ui| ui.item && UserPet.leveling_stone_types.include?(ui.item.item_type) }
                                   .sort_by { |ui| (ui.item.name.presence || "").downcase } %>

    <% if leveling_items.any? %>
      <details class="group rounded-2xl border border-slate-800/70 bg-slate-900/60 p-3 text-xs text-slate-300">
        <summary class="flex cursor-pointer items-center justify-between text-xs font-semibold text-slate-100">
          Optional boosters
          <span class="text-[10px] text-slate-500 transition group-open:rotate-180">âŒƒ</span>
        </summary>
        <div class="mt-2 space-y-2">
          <% leveling_items.each do |user_item| %>
            <div class="flex items-center justify-between rounded-xl border border-slate-800/60 bg-slate-950/60 px-3 py-2">
              <div>
                <p class="text-sm font-semibold text-slate-100"><%= user_item.item.name %></p>
                <% if user_item.item.description.present? %>
                  <p class="text-[11px] text-slate-400"><%= user_item.item.description %></p>
                <% end %>
              </div>
              <span class="text-[11px] font-semibold text-indigo-200">x<%= user_item.quantity %></span>
            </div>
          <% end %>
        </div>
      </details>
    <% end %>

    <% if status_message.present? %>
      <p class="rounded-2xl border border-slate-800/70 bg-slate-900/60 px-3 py-2 text-xs text-slate-400"><%= status_message %></p>
    <% end %>

    <%= form_with url: level_up_user_pet_path(user_pet),
                  method: :post,
                  class: "space-y-2",
                  data: { turbo_frame: info_panel_dom_id(user_pet) } do |f| %>
      <% if leveling_items.any? %>
        <label class="flex items-center justify-between gap-2 rounded-2xl border border-slate-800/70 bg-slate-900/60 px-3 py-2 text-xs text-slate-300">
          <span class="font-semibold text-slate-200">Use booster item (optional)</span>
          <%= f.collection_select :held_user_item_id,
                                   leveling_items,
                                   :id,
                                   ->(ui) { "#{ui.item.name} (x#{ui.quantity})" },
                                   include_blank: "No booster",
                                   class: "w-44 rounded-lg border border-slate-700 bg-slate-950/80 px-2 py-1 text-xs text-slate-200 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
        </label>
      <% end %>

      <%= f.button button_disabled ? "Level up unavailable" : "Level Up Now",
                   class: "w-full inline-flex items-center justify-center gap-2 rounded-xl px-4 py-2 text-sm font-semibold transition focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950 #{button_disabled ? 'cursor-not-allowed border border-slate-800/60 bg-slate-900/50 text-slate-500' : 'bg-indigo-600 text-white hover:bg-indigo-500'}",
                   disabled: button_disabled %>
    <% end %>
  </div>
</section>
