%h1.text-3xl.font-bold.text-slate-900.mb-4 Exploration Zones

.flex.items-center.justify-between.mb-6
  %p.text-sm.text-slate-500 Manage world durations, rewards, and rotation windows.
  = link_to "New Zone", new_admin_world_path, class: "inline-flex items-center rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500"

%table.w-full.text-left.border-collapse.bg-white.rounded-3xl.shadow-sm
  %thead
    %tr.bg-slate-100.text-xs.font-semibold.text-slate-600.uppercase
      %th.px-4.py-3 Name
      %th.px-4.py-3 Duration
      %th.px-4.py-3 Reward
      %th.px-4.py-3 Rotation
      %th.px-4.py-3 Status
      %th.px-4.py-3 Actions
  %tbody.text-sm.text-slate-800
    - @worlds.each do |world|
      %tr.border-t
        %td.px-4.py-3.font-semibold= world.name
        %td.px-4.py-3= "#{world.duration}s"
        %td.px-4.py-3= world.reward_item_type
        %td.px-4.py-3
          - if world.rotation_active?
            %span.text-emerald-600 Active (#{world.rotation_weight})
          - else
            %span.text-slate-400 Paused
        %td.px-4.py-3
          - if world.enabled?
            %span.inline-flex.items-center.rounded-full.bg-emerald-50.px-2.py-1.text-xs.font-semibold.text-emerald-700 Enabled
          - else
            %span.inline-flex.items-center.rounded-full.bg-slate-100.px-2.py-1.text-xs.font-semibold.text-slate-500 Disabled
        %td.px-4.py-3.space-x-2
          = link_to "Show", admin_world_path(world), class: "text-indigo-600 hover:underline"
          = link_to "Edit", edit_admin_world_path(world), class: "text-amber-600 hover:underline"
          = link_to "Delete", admin_world_path(world), method: :delete, data: { turbo_confirm: "Delete #{world.name}?" }, class: "text-rose-600 hover:underline"
